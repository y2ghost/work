" 设置通用选项
set nocp
set number
set hlsearch
set autoindent
set cindent
set ts=4
set sw=4
set bs=indent,eol,start
set ruler
set expandtab
colorscheme murphy
set showcmd
syntax on
filetype on
filetype plugin on
set nobackup
set encoding=utf-8

" 设置leader全局和本地值
let mapleader='\'
let maplocalleader=','

source $VIMRUNTIME/delmenu.vim
set langmenu=zh_CN.UTF-8
source $VIMRUNTIME/menu.vim
language zh_CN.UTF-8

